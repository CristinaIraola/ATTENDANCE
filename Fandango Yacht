public class Boat {

	 private String color;
	    
	    public Boat(String color) {
	        this.color = color;
	    }
	    
	    public String getColor() {
	        return color;
	    }
	    
	    public void floatOnWater() {
	        System.out.println("The boat is floating.");
	    }
	}
	
    // FandangoYacht class (subclass of Boat)
public class FandangoYacht extends Boat {

	 private String mainSailColor;
	    
	    public FandangoYacht(String color, String mainSailColor) {
	        super(color);
	        this.mainSailColor = mainSailColor;
	    }
	    
	    public String getMainSailColor() {
	        return mainSailColor;
	    }
	
	    @Override
	    public void floatOnWater() {
	    	System.out.println("Fandango Yacht is floating gracefully.");
	    }

	    public static void main(String[] args) {
	    
	    	FandangoYacht fandangoYacht = new FandangoYacht("White", "Black");
    
	    		String boatColor = fandangoYacht.getColor();
	    			System.out.println("Boat Color: " + boatColor);
    
	    		String mainSailColor = fandangoYacht.getMainSailColor();
	    			System.out.println("Main Sail Color: " + mainSailColor);
    
	    				fandangoYacht.floatOnWater();
	    }
	}
    
     
